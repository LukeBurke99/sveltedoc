{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "pnpm: compile",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "compile"],
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "silent"
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "pnpm: build",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "build"],
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "silent"
			},
			"problemMatcher": []
		},
		{
			"label": "pnpm: watch",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "compile", "--watch"],
			"isBackground": true,
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "silent"
			},
			"problemMatcher": {
				"owner": "typescript",
				"applyTo": "allDocuments",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "^([^\\s].*?)\\((\\d+),(\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"code": 5,
					"message": 6
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? - File change detected\\. Starting incremental compilation\\.\\.\\.",
					"endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? - (Compilation complete\\.|Found \\d+ errors?\\. Watching for file changes\\.)"
				}
			}
		}
	]
}
