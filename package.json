{
	"name": "sveltedoc",
	"publisher": "burke-development",
	"displayName": "SvelteDoc",
	"description": "Provide documentation for your Svelte components, right inside the VS Code \"hover\" tooltip.",
	"version": "2.0.2",
	"icon": "images/logo/512.png",
	"galleryBanner": {
		"theme": "dark",
		"color": "#FF3E00"
	},
	"categories": [
		"Formatters",
		"Notebooks",
		"Other"
	],
	"keywords": [
		"svelte",
		"svelte5",
		"sveltekit",
		"sveltedoc",
		"component",
		"components",
		"component-docs",
		"documentation",
		"docs",
		"docblock",
		"jsdoc",
		"auto-generate",
		"generator",
		"props",
		"bindable",
		"component-props",
		"prop-types",
		"type-inference",
		"typescript",
		"ts",
		"hover",
		"hover-docs",
		"intellisense",
		"api-docs",
		"code-comments",
		"comment-block",
		"vscode",
		"vscode-extension",
		"developer-tools"
	],
	"license": "SEE LICENSE IN LICENSE",
	"homepage": "https://github.com/LukeBurke99/sveltedoc/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/LukeBurke99/sveltedoc/issues"
	},
	"sponsor": {
		"url": "https://buymeacoffee.com/lukeburke"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/LukeBurke99/sveltedoc"
	},
	"engines": {
		"vscode": "^1.103.0"
	},
	"activationEvents": [
		"onLanguage:svelte"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sveltedoc.clearCache",
				"title": "%command.clearCache.title%",
				"category": "SvelteDoc"
			},
			{
				"command": "sveltedoc.showOutput",
				"title": "%command.showOutput.title%",
				"category": "SvelteDoc"
			}
		],
		"configuration": {
			"title": "SvelteDoc",
			"properties": {
				"sveltedoc.cacheExpirationMinutes": {
					"type": "number",
					"default": 30,
					"minimum": 1,
					"description": "%settings.cacheExpirationMinutes.description%",
					"order": 0
				},
				"sveltedoc.normaliseComment": {
					"type": "boolean",
					"default": false,
					"description": "%settings.normaliseComment.description%",
					"order": 1
				},
				"sveltedoc.normaliseType": {
					"type": "boolean",
					"default": true,
					"description": "%settings.normaliseType.description%",
					"order": 2
				},
				"sveltedoc.normaliseDefaultValue": {
					"type": "boolean",
					"default": true,
					"description": "%settings.normaliseDefaultValue.description%",
					"order": 3
				},
				"sveltedoc.tooltipOrder": {
					"type": "string",
					"default": "required",
					"enum": [
						"normal",
						"alphabetical",
						"required",
						"type"
					],
					"enumDescriptions": [
						"%settings.tooltipOrder.normal%",
						"%settings.tooltipOrder.alphabetical%",
						"%settings.tooltipOrder.required%",
						"%settings.tooltipOrder.type%"
					],
					"description": "%settings.tooltipOrder.description%",
					"order": 4
				},
				"sveltedoc.tooltipFormat": {
					"type": "string",
					"default": "code-block",
					"enum": [
						"bullet-list",
						"table",
						"code-block"
					],
					"enumDescriptions": [
						"%settings.tooltipFormat.bulletList%",
						"%settings.tooltipFormat.table%",
						"%settings.tooltipFormat.codeBlock%"
					],
					"description": "%settings.tooltipFormat.description%",
					"order": 5
				},
				"sveltedoc.detailedResolverLogging": {
					"type": "boolean",
					"default": true,
					"description": "%settings.detailedResolverLogging.description%",
					"order": 6
				},
				"sveltedoc.fallbackTypes": {
					"type": "object",
					"default": {
						"children": "Snippet",
						"class": "string"
					},
					"description": "%settings.fallbackTypes.description%",
					"order": 7
				},
				"sveltedoc.barrelFileMaxDepth": {
					"type": "number",
					"default": 3,
					"minimum": 0,
					"maximum": 10,
					"description": "%settings.barrelFileMaxDepth.description%",
					"order": 8
				},
				"sveltedoc.barrelFileNames": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"index",
						"main"
					],
					"description": "%settings.barrelFileNames.description%",
					"order": 9
				}
			}
		}
	},
	"//": "c8 configuration for code coverage only",
	"c8": {
		"include": [
			"src/**/*.ts"
		],
		"exclude": [
			"tests/**",
			"src/types.ts"
		],
		"reporter": [
			"text",
			"lcov"
		],
		"all": true
	},
	"scripts": {
		"clean": "npx rimraf out node_modules coverage .eslintcache",
		"compile": "tsc -p ./",
		"build": "node esbuild.mjs",
		"build:prod": "node esbuild.mjs --production",
		"analyze": "node esbuild.mjs && echo \"\"\"Bundle created! Check the output above for size analysis.\"\"\"",
		"lint": "eslint src --fix --cache --cache-location .eslintcache",
		"pretest": "pnpm run lint",
		"test": "mocha -r ts-node/register --ui bdd --timeout 20000 \"tests/**/*.test.ts\"",
		"coverage": "c8 mocha -r ts-node/register --ui bdd --timeout 20000 \"tests/**/*.test.ts\"",
		"prerelease": "pnpm test && npx rimraf out && pnpm run build:prod",
		"release": "vsce publish --no-dependencies",
		"release:ci": "semantic-release",
		"prepackage": "pnpm test && npx rimraf out && pnpm run build:prod && node -e \"require('fs').mkdirSync('releases',{recursive:true})\"",
		"package": "vsce package --no-dependencies -o \"releases/%npm_package_name%-%npm_package_version%.vsix\""
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/exec": "^7.1.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.5",
		"@semantic-release/npm": "^12.0.2",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.103.0",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.0",
		"c8": "^10.1.3",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"esbuild": "^0.27.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-unicorn": "^60.0.0",
		"globals": "^16.3.0",
		"mocha": "^10.7.3",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"semantic-release": "^24.2.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.41.0"
	},
	"packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
	"dependencies": {
		"get-tsconfig": "^4.13.0",
		"vscode-nls": "^5.2.0",
		"yaml": "^2.8.1"
	}
}
